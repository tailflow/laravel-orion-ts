{
	"compilerOptions": {
		"moduleResolution": "node",
		"target": "ES6",
		"module": "ESNext",
		"strict": true,
		"sourceMap": true,
		"declaration": true,
		"allowSyntheticDefaultImports": true,
		"suppressImplicitAnyIndexErrors": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"outDir": "dist/esm",
		"typeRoots": [
			"node_modules/@types"
		]
	},
	"include": [
		"src"
	]
}
